{
  "name": "sharu",
  "version": "0.1.3",
  "description": "fully decentralized, post-cloud, unstoppable, censorfree, trustless, anonymous filesharing",
  "homepage": "https://sharu.io",
  "author": {
    "name": "sharu",
    "email": "info@sharu.io"
  },
  "keywords": [
    "decentralized",
    "post-cloud",
    "unstoppable",
    "censorfree",
    "trustless",
    "filesharing"
  ],
  "main": "main.js",
  "private": true,
  "scripts": {
    "postinstall": "npm run postinstall:electron && npx electron-builder install-app-deps",
    "postinstall:web": "node postinstall-web",
    "postinstall:electron": "node postinstall",
    "ng": "ng",
    "startDev": "npm run postinstall:electron && npm-run-all -p ng:serveDev electron:serve",
    "start": "npm run postinstall:electron && npm-run-all -p ng:serveKaleido electron:serve",
    "build": "npm run postinstall:electron && npm run electron:serve-tsc && ng build",
    "build:dev": "npm run build -- -c dev",
    "build:devKaleido": "npm run build -- -c devKaleido",
    "build:prod": "npm run build -- -c production",
    "ng:serveDev": "ng serve -c dev",
    "ng:serveKaleido": "ng serve -c devKaleido",
    "ng:serve:prod": "ng serve --prod",
    "ng:serve:web": "npm run postinstall:web && ng serve -o",
    "secondScreenDev": "npm run postinstall:web && ng serve --port 4201  -c dev",
    "secondScreenKaleido": "npm run postinstall:web && ng serve --port 4201  -c devKaleido",
    "thirdScreenKaleido": "npm run postinstall:web && ng serve --port 4202  -c devKaleido",
    "electron:serve-tsc": "tsc -p tsconfig-serve.json",
    "electron:serve": "wait-on http-get://localhost:4200/ && npm run electron:serve-tsc && electron . --serve",
    "electron:local": "npm run build:prod && electron .",
    "electron:linux": "npm run build:prod && npx electron-builder build --linux",
    "electron:windows": "npm run build:prod && npx electron-builder build --windows",
    "electron:mac": "npm run build:prod && npx electron-builder build --mac",
    "test": "npm run postinstall:web && ng test",
    "e2e": "npm run postinstall:web && ng e2e",
    "testbuild": "electron-builder --x64 --config ./electron-builder.json"
  },
  "dependencies": {
    "@angular/platform-server": "^7.1.0",
    "@mdi/font": "^3.0.39",
    "angular-2-local-storage": "^2.0.0",
    "async-exit-hook": "^2.0.1",
    "baffle": "^0.3.6",
    "buffer": "^5.2.1",
    "ethereumjs-wallet": "^0.6.2",
    "ethers": "^4.0.15",
    "git-describe": "^4.0.3",
    "ipfsd-ctl": "^0.40.3",
    "js-ipfs-dep": "^0.1.1",
    "ng2-avatar": "^2.3.1",
    "ngx-electron": "^2.0.0",
    "node-forge": "^0.7.6",
    "primeicons": "^1.0.0-beta.10",
    "primeng": "^7.0.3",
    "pull-stream-to-stream": "^1.3.4",
    "readable-stream": "^3.0.6",
    "rxjs-compat": "^6.3.3",
    "semaphore-async-await": "^1.5.1",
    "stream-to-pull-stream": "^1.7.2",
    "truffle-contract": "^4.0.0",
    "typedarray-to-buffer": "^3.1.5"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.11.4",
    "@angular/animations": "^7.1.0",
    "@angular/cdk": "^7.1.0",
    "@angular/cli": "^7.0.6",
    "@angular/common": "^7.1.0",
    "@angular/compiler": "^7.1.0",
    "@angular/compiler-cli": "^7.1.0",
    "@angular/core": "^7.1.0",
    "@angular/forms": "^7.1.0",
    "@angular/http": "^7.1.0",
    "@angular/language-service": "^7.1.0",
    "@angular/material": "^7.1.0",
    "@angular/platform-browser": "^7.1.0",
    "@angular/platform-browser-dynamic": "^7.1.0",
    "@angular/router": "^7.1.0",
    "@ngx-translate/core": "11.0.1",
    "@ngx-translate/http-loader": "4.0.0",
    "@types/jasmine": "^3.3.0",
    "@types/jasminewd2": "2.0.6",
    "@types/node": "^10.12.11",
    "codelyzer": "^4.5.0",
    "core-js": "^2.5.7",
    "electron": "^4.0.1",
    "electron-builder": "20.38.2",
    "electron-reload": "1.4.0",
    "jasmine-core": "^3.3.0",
    "jasmine-spec-reporter": "^4.2.1",
    "karma": "^3.1.1",
    "karma-chrome-launcher": "^2.2.0",
    "karma-cli": "^2.0.0",
    "karma-coverage-istanbul-reporter": "2.0.4",
    "karma-jasmine": "^2.0.1",
    "karma-jasmine-html-reporter": "^1.4.0",
    "karma-typescript": "^3.0.13",
    "npm-run-all": "4.1.5",
    "npx": "10.2.0",
    "rxjs": "^6.3.3",
    "rxjs-tslint": "^0.1.5",
    "ts-node": "7.0.1",
    "tslint": "^5.11.0",
    "typescript": "3.1.6",
    "wait-on": "3.2.0",
    "webdriver-manager": "12.1.0",
    "webpack": "^4.26.0",
    "zone.js": "^0.8.26"
  }
}
