{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noStrictGenericChecks": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "es2016",
      "es2015",
      "dom"
    ],
    "types": [
      "mocha"
    ]
  },
  "include": [
    "main.ts",
    "src/polyfills.ts",
    "src/**/*",
  ],
  "exclude": [
    "node_modules"
  ],
  "angularCompilerOptions": {
    "enableIvy": false
  } 
}
